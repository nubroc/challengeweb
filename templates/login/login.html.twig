{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 overflow-hidden">

        <!-- Navbar -->
        <nav class="bg-gray-800 text-white p-4">
            <div class="container mx-auto flex justify-between items-center">
                <a href="{{ path('welcomepage') }}" class="text-lg hover:text-gray-400">
                    <h2 class="text-2xl font-bold">OzzaBank</h2>
                </a>
                <ul class="flex space-x-6">
                    <li>
                        <a href="{{ path('login') }}" class="text-lg hover:text-gray-400">Login</a>
                    </li>
                    <li>
                        <a href="{{ path('register') }}" class="text-lg hover:text-gray-400">Register</a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Login Form Section -->
        <div class="flex items-center justify-center min-h-[86vh] bg-gray-50" style="background-image: url('{{ asset('images/welcomebackground.jpg') }}');">
            <div class="bg-white p-8 rounded-lg shadow-lg w-full sm:w-96">
                <h2 class="text-3xl font-semibold text-center text-gray-800 mb-6">Log in</h2>

                <!-- Display error if any -->
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <!-- Display logged in user info -->
                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">Logout</a>
                    </div>
                {% endif %}

                <!-- Form Start -->
                <form method="post">
                    <div class="space-y-4">
                        <div class="form-group">
                            <label for="username" class="font-bold">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="input-field border border-gray-300 focus:border-yellow-500 focus:ring-yellow-500 rounded-lg p-3 w-full" autocomplete="email" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="password" class="font-bold">Password</label>
                            <input type="password" name="_password" id="password" class="input-field border border-gray-300 focus:border-yellow-500 focus:ring-yellow-500 rounded-lg p-3 w-full" autocomplete="current-password" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="flex justify-center mt-6">
                            <button class="bg-yellow-500 hover:bg-yellow-400 text-white py-2 px-6 rounded-full text-lg" type="submit">Sign in</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Footer -->
        <footer class="bg-gray-800 text-white p-4">
            <div class="container mx-auto text-center">
                <p>&copy; {{ "now"|date("Y") }} OzzaBank. Tous droits réservés.</p>
                <p class="text-sm">Créé avec ❤️ par l'équipe OzzaBank</p>
            </div>
        </footer>

    </div>
{% endblock %}
