{% extends 'base.html.twig' %}

{% block title %}Page d'accueil utilisateur{% endblock %}

{% block body %}
<h1>Bienvenue, {{ app.user.nom }} {{ app.user.prenom }}!</h1>

<h2>Vos comptes</h2>
<table>
    <thead>
        <tr>
            <th>Numéro de compte</th>
            <th>Type</th>
            <th>Solde</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for account in accounts %}
            <tr>
                <td>{{ account.accountNumber }}</td>
                <td>{{ account.type }}</td>
                <td>{{ account.balance }}</td>
                <td>
                    <a href="{{ path('account_view', {id: account.id}) }}">Voir</a>
                    <a href="{{ path('account_close', {id: account.id}) }}">Clôturer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}